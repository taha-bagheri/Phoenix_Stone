<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context=".HomePage">


    <LinearLayout
        android:id="@+id/linearLayoutHome"
        android:layout_width="382dp"
        android:layout_height="803dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_title_home"
            android:layout_width="221dp"
            android:layout_height="84dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/title_orange"
            android:textSize="28sp"
            android:textStyle="italic|bold" />

        <ImageView
            android:id="@+id/logoApp_home"
            android:layout_width="157dp"
            android:layout_height="175dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/img_btn_productos"
            android:layout_width="match_parent"
            android:layout_height="251dp"
            android:src="@drawable/productos" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_btn_information"
                android:layout_width="201dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Información"
                android:paddingHorizontal="2dp"
                android:src="@drawable/information" />

            <ImageView
                android:id="@+id/img_btn_about"
                android:layout_width="201dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:contentDescription="Acerca De..."
                android:layout_weight="1"
                android:paddingHorizontal="1dp"
                android:src="@drawable/about" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_contact"
            android:layout_width="362dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/button_light_gray"
            android:text="Contáctanos ☏" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>